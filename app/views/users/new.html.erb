<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this account from being added:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :email %>
<br />
<%= f.text_field :email %>
<br />
<br />
<%= f.label :password %>
<br />
<%= f.password_field :password %>
<br />
<br />
<%= f.label :password_confirmation %>
<br />
<%= f.password_field :password_confirmation %>
<br />
<br />
<br />
<label>Create a username </label>
<br />
<%= f.text_field :username %>
<br />
<br />
<%= f.label "Type of User?" %>
<%= f.select "role", options_for_select(["user", "moderator", "admin"]), include_blank: false %>
<br />
<br />
<%= f.submit %>
<% end %>

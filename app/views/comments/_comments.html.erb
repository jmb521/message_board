
<% @comments.each do |comment| %>

<p data-id="<%= comment.id %>">
  <% if comment.user.profile %>
  <img src= "<%= comment.user.profile.photo_url %>" alt="" width=100 height=100/>
  <% end %>
  <a href= "<%= profile_path(comment.user.id) %>"><span class="username"><%= comment.user.username %></span></a> <%= comment.content %>
  <% if comment.user.id == current_user.id%>

  <%= link_to "Edit", edit_comment_path(comment), method: 'get' %> | <%= link_to "Delete", comment,  :method => 'delete', id: "delete_comment", :"data-post-id" => comment.post.id, :"data-id" => comment.id, :onclick => "return false"%>

  <% end %>

  <br />
<% end %>


<div class="login">
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <br />
  <%= f.text_field :email %>
  <br />
  <br />
  <%= f.label :password %>
  <br />
  <%= f.password_field :password %>
  <br />
  <br />
  <%= f.label "re-enter password" %>
  <br />
  <%= f.password_field :password_confirmation %>
  <br />
  <br />
  <%= f.submit 'Login' %>
  <% end %>
</div>
<% if @user.errors.any? %>
  <div id="error_explanation">
    
    <h2>There were some errors:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

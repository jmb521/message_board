<h1><%= @post.content %></h1>


<br />
Comments:
<br />
<div class="comment">
  <%= render partial: "posts/comment_content", post: @post%>
<% @post.comments.reverse_each do |comment| %>

<p>

  <%= render partial: "/profiles/profile_pic", locals: {profile: Profile.find_by(user_id: current_user.id)} %>
  <span class="username"><%= comment.user.username %></span> <%= comment.content %>
  <% if comment.user.id == current_user.id%>
  <%= link_to "Edit", edit_comment_path(comment) %> | <%= link_to "Delete", comment, :method => 'delete' %>
  <% end %>

  <br />
<% end %>

</p>
</div>

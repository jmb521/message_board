<h1><%= @post.content %></h1>


<br />
Comments:
<br />
<div class="comment">
  <%= render partial: "posts/comment_content", post: @post%>
<% @post.comments.reverse_each do |comment| %>

<p>
  <% if comment.user.profile %>
  <img src= "<%= comment.user.profile.photo_url %>" alt="" width=100 height=100/>
  <% end %>
  <a href= "<%= profile_path(comment.user.id) %>"><span class="username"><%= comment.user.username %></span></a> <%= comment.content %>
  <% if comment.user.id == current_user.id%>

  <%= link_to "Edit", edit_post_comment_path(@post, comment), method: 'get' %> | <%= link_to "Delete", comment, :method => 'delete' %>
  <% end %>

  <br />
<% end %>

</p>
</div>

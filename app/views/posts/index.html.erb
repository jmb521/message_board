 <%= render :partial => 'form' %>
 <br />
<% @posts.each do |post| %>
  <%= link_to(post.content, post_path(post.id)) %>
  <br />
  by: <%= post.user.username %> on: <%= post.created_at.strftime("%A, %B, %d") %>

  <% if post.user.id == current_user.id || is_admin? || is_moderator?  %>
    <%= link_to "Edit Post", edit_post_path(post) %>
    <%= link_to "Delete", post, :method => 'delete' %>
    <% end %>
  <hr />

<% end %>
